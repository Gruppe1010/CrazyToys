@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    var cartQuantity = ViewData["CartQuantity"];
}

<!-- Header Section Begin -->
<header class="header">
    <div class="header__top">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-7">
                    <div class="header__top__left">
                        <p>GRATIS FORSENDELSE VED ORDRE OVER 499 DKK </p>
                    </div>
                </div>
                <div class="col-lg-6 col-md-5">
                    <div class="header__top__right">
                        <div class="header__top__links">
                            <a href="#">Log Ind</a>
                            <a href="#">FAQs</a>
                        </div>
                        <div class="header__top__hover">
                            <span>DKK <i class="arrow_carrot-down"></i></span>
                            <ul>
                                <li>DKK</li>
                                <li>EUR</li>
                                <li>USD</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <div class="header__logo">
                    <a href="/"><img src="img/header-logo.PNG" alt=""></a>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <nav class="header__menu mobile-menu">
                    <ul>
                        <li class="@(ViewBag.Current == "Home" ? "active" : "")"><a href="/">FORSIDE</a></li>
                        <li class="@(ViewBag.Current == "Shop" ? "active" : "")"><a href="/shop?sort=price_asc">BUTIK</a></li>
                        <li><a href="/about">OM OS</a></li>
                        <li><a href="/contact">KONTAKT OS</a></li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3 col-md-3">
                <div class="header__nav__option">
                    <a href="#" class="search-switch"><img src="img/icon/search.png" class="header-icons" alt=""></a>
                    <a href="#"><img src="img/icon/heart.png" class="header-icons" alt=""></a>
                    <a href="/shopping-cart"><img src="img/icon/cart.png" class="header-icons" alt=""> <span class="bold700 size13px">@cartQuantity</span></a>
                    <div class="price">0.00 DKK</div>
                </div>
            </div>
        </div>
        <div class="canvas__open"><i class="fa fa-bars"></i></div>
    </div>
</header>
