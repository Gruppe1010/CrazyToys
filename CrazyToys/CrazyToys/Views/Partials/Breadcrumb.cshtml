@using Umbraco.Cms.Web.Common.PublishedModels;
@using CrazyToys.Services;
@inject BreadcrumbService BreadcrumbService;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
}

<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    @foreach (var breadcrumb in BreadcrumbService.GetBreadcrumbs())
                    {
                        <h4 asp-area="@breadcrumb.Area" asp-controller="@breadcrumb.Controller" asp-action="@breadcrumb.Action" asp-route-id="@breadcrumb.Id">@breadcrumb.Title</h4>
                        <div class="breadcrumb__links">
                            <a href="/">Forside</a>
                            @if (@breadcrumb.Title == "Indkøbskurv")
                            {
                                <a href="/shop?sort=price_asc">Butik</a>
                            }
                            else if (@breadcrumb.Title == "Tjek Ud")
                            {
                                <a href="/shop?sort=price_asc">Butik</a>
                                <a href="/shopping-cart">Indkøbskurv</a>
                            }
                            <span asp-area="@breadcrumb.Area" asp-controller="@breadcrumb.Controller" asp-action="@breadcrumb.Action" asp-route-id="@breadcrumb.Id">&nbsp;@breadcrumb.Title</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
