@using CrazyToys.Web.Controllers
@model CrazyToys.Web.Models.CheckoutUserModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


@using (Html.BeginUmbracoForm<CheckoutController>(nameof(CheckoutController.Submit)))
{
    <div class="row">
        <div class="col-lg-8 col-md-6">
            <h6 class="checkout__title">Billing Details</h6>
            <div class="row">
                <div class="col-lg-6">
                    <div class="checkout__input">
                        <p>Fornavn<span>*</span></p>
                        @Html.TextBoxFor(m => m.Firstname, new { @placeholder = "Fx. Ole", @required  = "required"})
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="checkout__input">
                        <p>Efternavn<span>*</span></p>
                        @Html.TextBoxFor(m => m.Lastname, new { @placeholder = "Fx. Olesen", @required  = "required"})
                    </div>
                </div>
            </div>
            <div class="checkout__input">
                <p>Land<span>*</span></p>
                @Html.TextBoxFor(m => m.Country, new { @placeholder = "Fx. Danmark", @required  = "required"})
            </div>
            <div class="checkout__input">
                <p>By<span>*</span></p>
                @Html.TextBoxFor(m => m.City, new { @placeholder = "Fx. København", @required  = "required"})
            </div>
            <div class="checkout__input">
                <p>Adresse<span>*</span></p>
                @Html.TextBoxFor(m => m.Address, new { @placeholder = "Fx. Gothersgade 14", @required  = "required"})
            </div>
            <div class="checkout__input">
                <p>Postnummer<span>*</span></p>
                @Html.TextBoxFor(m => m.Postcode, new { @placeholder = "Fx. 1123", @required  = "required"})
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="checkout__input">
                        <p>Tlf. nr.<span>*</span></p>
                        @Html.TextBoxFor(m => m.Phone, new { @placeholder = "Fx. 70206538", @required  = "required"})
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="checkout__input">
                        <p>Email<span>*</span></p>
                        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Fx. Ole@hotmail.dk", @required  = "required"})

                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="checkout__order">
                <h4 class="order__title">Your order</h4>
                <div class="checkout__order__products">Product <span>Total</span></div>
                <ul class="checkout__total__products">
                    <li>01. Vanilla salted caramel <span>$ 300.0</span></li>
                    <li>02. German chocolate <span>$ 170.0</span></li>
                    <li>03. Sweet autumn <span>$ 170.0</span></li>
                    <li>04. Cluten free mini dozen <span>$ 110.0</span></li>
                </ul>
                <ul class="checkout__total__all">
                    <li>Subtotal <span>$750.99</span></li>
                    <li>Total <span>$750.99</span></li>
                </ul>
                <p>Lorem ipsum dolor sit amet, consectetur adip elit, sed do eiusmod tempor incididunt
                ut labore et dolore magna aliqua.</p>
                <div class="checkout__input__checkbox">
                    <label for="payment">
                        Check Payment
                        <input type="checkbox" id="payment">
                        <span class="checkmark"></span>
                    </label>
                </div>
                <div class="checkout__input__checkbox">
                    <label for="paypal">
                        Paypal
                        <input type="checkbox" id="paypal">
                        <span class="checkmark"></span>
                    </label>
                </div>
                <button type="submit" class="site-btn">PLACE ORDER</button>
            </div>
        </div>
    </div>
}
