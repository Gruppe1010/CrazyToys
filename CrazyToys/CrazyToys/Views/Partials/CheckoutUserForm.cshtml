@using CrazyToys.Web.Controllers
@model CrazyToys.Web.Models.CheckoutUserModel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


@using (Html.BeginUmbracoForm<CheckoutSurfaceController>(nameof(CheckoutSurfaceController.Submit)))
{
        
            <h6 class="checkout__title">LEVERINGSADRESSE</h6>
            <div class="row">
                <div class="col-lg-6">
                    <div class="checkout__input">
                        <p>Fornavn<span>*</span></p>
                        @Html.TextBoxFor(m => m.Firstname, new { @placeholder = "Fx. Ole", @required  = "required"})
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="checkout__input">
                        <p>Efternavn<span>*</span></p>
                        @Html.TextBoxFor(m => m.Lastname, new { @placeholder = "Fx. Olesen", @required  = "required"})
                    </div>
                </div>
            </div>
            <div class="checkout__input">
                <p>Land<span>*</span></p>
                @Html.TextBoxFor(m => m.Country, new { @placeholder = "Fx. Danmark", @required  = "required"})
            </div>
            <div class="checkout__input">
                <p>By<span>*</span></p>
                @Html.TextBoxFor(m => m.City, new { @placeholder = "Fx. København", @required  = "required"})
            </div>
            <div class="checkout__input">
                <p>Adresse<span>*</span></p>
                @Html.TextBoxFor(m => m.Address, new { @placeholder = "Fx. Gothersgade 14", @required  = "required"})
            </div>
            <div class="checkout__input">
                <p>Postnummer<span>*</span></p>
                @Html.TextBoxFor(m => m.Postcode, new { @placeholder = "Fx. 1123", @required  = "required"})
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="checkout__input">
                        <p>Tlf. nr.<span>*</span></p>
                        @Html.TextBoxFor(m => m.Phone, new { @placeholder = "Fx. 70206538", @required  = "required"})
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="checkout__input">
                        <p>Email<span>*</span></p>
                        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Fx. Ole@hotmail.dk", @required  = "required"})
                    </div>
                </div>
            </div>
                

             <button type="submit" class="site-btn" style="width:750px">KØB NU</button>
             
        
   
}
